<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.co.trapps.droid_dive">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".components.activities.ServiceActivity"></activity>
        <activity
            android:name=".components.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".components.activities.RVMultiTypeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".components.services.StartedService"
            android:description="Checking how Started Service Works"
            android:enabled="true" />

        <service
            android:name=".components.services.StartedIntentService"
            android:description="Checking how Started Intent Service Works"
            android:enabled="true" />

        <service
            android:name=".components.services.BindService"
            android:description="Checking how Bind Service Works"
            android:enabled="true" />


    </application>

</manifest>